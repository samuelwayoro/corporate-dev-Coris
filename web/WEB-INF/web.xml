<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <description>Switch off caching. You can remove this parameter or comment it out when this app goes into production.</description>
        <param-name>jmaki-usecache</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>PARAMETER_ENCODING</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <servlet>
        <servlet-name>XmlHttpProxy</servlet-name>
        <servlet-class>jmaki.xhp.XmlHttpProxyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>net.sf.jasperreports.j2ee.servlets.ImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>clearing.web.controller.NewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>XmlHttpProxy</servlet-name>
        <url-pattern>/xhp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControlServlet</servlet-name>
        <servlet-class>clearing.web.controller.ControlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlServlet</servlet-name>
        <url-pattern>/ControlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>clearing.web.controller.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/FileUploadServlet</url-pattern>
    </servlet-mapping>
    <listener>
        <description>sessionListener</description>
        <listener-class>
            clearing.web.listener.SessionListener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>VirementFileUpload</servlet-name>
        <servlet-class>clearing.web.controller.VirementFileUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VirementFileUpload</servlet-name>
        <url-pattern>/VirementFileUpload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VirementESNFileUpload</servlet-name>
        <servlet-class>clearing.web.controller.VirementESNFileUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VirementESNFileUpload</servlet-name>
        <url-pattern>/VirementESNFileUpload</url-pattern>
    </servlet-mapping> 
    <servlet>
        <servlet-name>VirementECMFileUpload</servlet-name>
        <servlet-class>clearing.web.controller.VirementECMFileUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VirementECMFileUpload</servlet-name>
        <url-pattern>/VirementECMFileUpload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
